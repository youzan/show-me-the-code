{% extends './base.njk' %}

{% block content %}
    <div id="app"></div>
{% endblock %}

{% block script %}
    <script src="/static/vs/loader.js"></script>
    <script>
        window._global = {
            id: '{{ id }}',
            url: {
                socket: '{{ $ws_url }}'
            },
            userName: '{{ userName }}'
        };
        window.require.config({ paths: { 'vs': '{{ $monaco_url }}' }});
        window.MonacoEnvironment = {
		    getWorkerUrl: function(workerId, label) {
			    return '{{ $domain }}/monaco_proxy.js';
		    }
	    };
    </script>
    <script src="/static/room.js"></script>
{% endblock %}

{% block style %}
    <link rel="stylesheet" href="/static/room.css" />
{% endblock %}
